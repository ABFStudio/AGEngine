{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ générer le fichier actif",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"*.cpp",
				"-o",
				"${workspaceFolder}/bin/engine",
				"-lSDL2",
				"-lSDL2_image",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"isDefault": true,
				 "kind": "build",
			},
			"detail": "compilateur : /usr/bin/g++"
		}
	]
}